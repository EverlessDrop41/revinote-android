<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.everlesslycoding.revinote.UserSettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ChangePassword">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Change Password"
                    android:id="@+id/ChangePasswordLabel"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old Password"
                    android:inputType="textPassword"
                    android:id="@+id/ChangePasswordOldPass"
                    android:layout_below="@id/ChangePasswordLabel"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:id="@+id/ChangePasswordNewPass"
                    android:layout_below="@id/ChangePasswordOldPass"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:layout_below="@+id/ChangePasswordNewPass"
                    android:id="@+id/ChangePasswordButton"
                    android:background="#2196F3"
                    android:textColor="#fff" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ChangePassword"
                android:id="@+id/ChangeEmail"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Change Email"
                    android:id="@+id/ChangeEmailLabel"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:id="@+id/ChangeEmailNewEmail"
                    android:layout_below="@id/ChangeEmailLabel"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:id="@+id/ChangeEmailPass"
                    android:layout_below="@+id/ChangeEmailNewEmail"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Email"
                    android:layout_below="@+id/ChangeEmailPass"
                    android:id="@+id/ChangeEmailButton"
                    android:textColor="#FFF"
                    android:background="#2196F3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ChangeEmail"
                android:id="@+id/DeleteAccount"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Delete Account"
                    android:id="@+id/DeleteAccountLabel"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:id="@+id/DeleteAccountPass"
                    android:layout_below="@+id/DeleteAccountLabel"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:layout_below="@+id/DeleteAccountPass"
                    android:id="@+id/DeleteAccountButton"
                    android:background="#f44336"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
